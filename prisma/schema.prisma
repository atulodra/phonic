generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        Int        @id @default(autoincrement())
    createdAt DateTime   @default(now())
    updatedAt DateTime   @updatedAt
    email     String     @unique
    password  String
    firstName String
    lastName  String
    playlists Playlist[]
}

model Song {
    id        Int        @id @default(autoincrement())
    createdAt DateTime   @default(now())
    updatedAt DateTime   @updatedAt
    name      String
    artist    Artist     @relation(fields: [artistId], references: [id])
    artistId  Int
    playlists Playlist[]
    duration  Int
    genres    String[]
    url       String
    // Premium
    // Album
    // Album     Album?     @relation(fields: [albumId], references: [id])
    // albumId   Int?
}

